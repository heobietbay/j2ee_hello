<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <display-name>J2EE Application</display-name>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

    <servlet-mapping>
        <servlet-name>demoServlet</servlet-name>
        <url-pattern>/demo-servlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>demoServlet</servlet-name>
        <servlet-class>com.example.j2ee_hello.servlet.using.webconfig.DemoServlet</servlet-class>
    </servlet>

    <filter>
        <filter-name>LogRequestFilter</filter-name>
        <filter-class>com.example.j2ee_hello.filter.LogRequestFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>LogRequestFilter</filter-name>
        <url-pattern>*</url-pattern>
    </filter-mapping>
</web-app>